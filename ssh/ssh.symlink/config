Compression yes
CompressionLevel 1

# General
IdentityFile    ~/.ssh/keys/id_rsa
HashKnownHosts  yes

ControlMaster auto
	ControlPath ~/.ssh/master/%r@%h:%p
	ControlPersist 15m

Host *.racksrvr.com *.racksrvr.co.uk
	ForwardAgent yes

# GIT repositories
Host owlforestry.beanstalkapp.com github.com gitlab.com git.owlforestry.com
	IdentityFile ~/.ssh/keys/git

Host bitbucket.org
  IdentityFile ~/.ssh/keys/git-bitbucket

# Self-hosted
# Gitolite admin
Host gitolite-admin
  HostName      git.owlforestry.com
  IdentityFile  ~/.ssh/keys/id_rsa
  ControlMaster no
